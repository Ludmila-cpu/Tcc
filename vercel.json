{
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/static/assets/$1"
        },
        {
            "source": "/(.*)\\.html",
            "destination": "/static/$1.html"
        },
        {
            "source": "/",
            "destination": "/static/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}